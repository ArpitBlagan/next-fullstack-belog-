generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  image String?
  post Post[]
  comment Comment[]
}

model Post{
  id String @id @default(uuid())
  title String
  description String
  upvote Int
  downvote Int
  image String
  user User @relation(fields: [user_id],references: [id],onDelete: Cascade)
  user_id String
  comment Comment[]
}

model Comment{
  id String @id @default(uuid())
  text String
  upvote Int
  downvote Int
  post Post @relation(fields: [post_id],references: [id],onDelete: Cascade)
  user User @relation(fields: [user_id],references: [id], onDelete: Cascade)
  user_id String
  post_id String
}